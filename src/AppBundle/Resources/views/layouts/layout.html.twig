    </script>
{% endif %}

<!--[if lt IE 8]>
<p class="browserupgrade">{{ 'application.message.browser.update'|trans|raw }}</p>
<![endif]-->

<div class="container">
    <div class="row header">

        <!-- Header -->
        <div class="col-xs-12 col-md-4">
            <a href="{{ path('homepage') }}">
                <img id="logo" class="img-responsive" src="{{ asset('images/logo.png') }}" alt="logo">
            </a>
        </div>
        <div class="col-xs-12 col-md-8">
            <!-- Header -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-6258298038359240"
                 data-ad-slot="8991085018"
                 data-ad-format="auto"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
    </div>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li{% if app.request.get('_route') == 'homepage' %} class="active"{% endif %}><a href="{{ path('homepage') }}">{{ 'menu.home'|trans }}</a></li>
                    <li{% if app.request.get('_route') == 'popular' %} class="active"{% endif %}><a href="{{ path('popular') }}">{{ 'menu.popular'|trans }}</a></li>
                    <li{% if app.request.get('_route') == 'categories' %} class="active"{% endif %}><a href="{{ path('categories') }}">{{ 'menu.categories'|trans }}</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="row">

        <!-- News Entries Column -->
        <div class="col-xs-12 col-md-8">

            <!-- Banner -->

            {% block body %}{% endblock %}
        </div>

        {{ render(controller('AppBundle:Default:sidebar')) }}

    </div>

    <hr>

    <div class="row">

        <!-- Footer -->
        <div class="col-md-12">

            <!-- Footer -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-6258298038359240"
                 data-ad-slot="8851484218"
                 data-ad-format="auto"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
    </div>

    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; BJJ Mania News {{ 'now'|date('Y') }} | <a href="{{ path('privacy_policy') }}">{{ 'footer.privacy'|trans }}</a></p>
            </div>
        </div>
    </footer>
</div>

{% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script type="text/javascript">window.jQuery || document.write('<script type="text/javascript" src="{{ asset('js/vendor/jquery-1.11.3.min.js') }}"><\/script>')</script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
{% endblock %}

</body>
</html>
